@model IEnumerable<CollegeSporting.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div>
    <h1 class="display-4">Product Manager</h1>
    <table class="table table-striped w-auto border table-bordered">
        <thead>
            <tr>
                <th scope="col">Code</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Release Date</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Code</td>
                    <td>@p.Name</td>
                    <td>$@p.Price</td>
                    <td>@p.Release.ToString("MM/dd/yyyy")</td>
                    <td><a class="btn btn-primary" asp-action="EditProduct" asp-route-id="@p.Id">Edit</a></td>
                    <td><a class="btn btn-primary" asp-action="DeleteProduct" asp-route-id="@p.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary" asp-action="AddProduct">Add Product</a>
</div>